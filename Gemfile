gem 'active_model_serializers'

gem 'rack-cors', :require => 'rack/cors'

gem "paperclip", :git => "git://github.com/thoughtbot/paperclip.git"

gem 'aws-sdk', '< 2.0'

gem 'dotenv-rails', :groups => [:development, :test]

gem 'byebug'

group :production do
     gem 'rails_12factor'
     gem 'puma'
end

